<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Qua</th>
      <th>Total score</th>
      <th>Quality score</th>
      <th>Convinience score</th>
      <th>Cost score</th>
      <th>Sight score</th>
      <th>Comment</th>
      <th>Photo data</th>
      <th>Photo title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.qua != nil ? review.qua.name : "" %></td>
        <td><%= review.total_score %></td>
        <td><%= review.quality_score %></td>
        <td><%= review.convinience_score %></td>
        <td><%= review.cost_score %></td>
        <td><%= review.sight_score %></td>
        <td><%= review.comment %></td>
        <td><%= review.photo_data %></td>
        <td><%= review.photo_title %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
