<%= form_for(@qua, :url => {:action => 'create_ajax', :controller => 'quas'}, :remote => true) do |f| %>
  <% if @qua.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@qua.errors.count, "error") %> prohibited this qua from being saved:</h2>

      <ul>
      <% @qua.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="field">
    <span id="label">名前:</span>
    <span><%= f.text_field :name %></span>
    <button type="button" class='btn btn-default btn-xs' onclick="getLatLngFromKeyword(qua_name.value, null)">検索</button>
  </div>
  <div class="field">
    <span>緯度:</span>
    <span><%= f.text_field :latitude %></span>
  </div>
  <div class="field">
    <span>経度:</span>
    <span><%= f.text_field :longitude %></span>
  </div>
  <div class="field">
    <span style="vertical-align: top;">泉質:</span>
    <span><%= f.text_area :quality, style: "width: 220px; height: 60px; resize: none;" %></span>
  </div>
  <div class="field">
    <span style="vertical-align: top;">効能:</span>
    <span><%= f.text_area :effect, style: "width: 220px; height: 60px; resize: none;" %></span>
  </div>
  <div class="field">
    <span>Webサイト:</span>
    <span><%= f.text_field :url %></span>
  </div>
  <div class="field">
    <span>宿泊の必要:</span>
    <span><%= f.radio_button :stay_required, "0" %>無
    <%= f.radio_button :stay_required, "1" %>有</span>
  </div>
  <div class="field">
    <span>料金:</span>
    <span><%= f.text_field :price %>円</span>
  </div>
  <div class="field">
    <span>画像タイトル</span>
    <span><%= f.text_field :image1_caption %></span>
  </div>
  <div class="field">
    <span>画像ファイル</span>
    <span><%= f.file_field :image1, accept: "image/jpeg" %></span>
  </div>
<% end %>
